        <div class="welcome">
            <h1 style="margin-left: 700px;">Crear Usuario</h1>
        </div>

        <div class="container"  style="margin-top: 100px; margin-right: 100px;">
            <form id="frmCrearSesion" class="form-horizontal">
                <fieldset id="fieldset">
                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="usuario1">Codigo Usuario: </label>
                        <div class="col-md-5">
                            <input id="usuarioId" name="usuarioId" type="number" placeholder="Codigo de Usuario"
                                class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="usuario1">Usuario: </label>
                        <div class="col-md-5">
                            <input id="usuario" name="usuario" type="text" placeholder="Nombre de Usuario"
                                class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="contraseña">Contraseña: </label>
                        <div class="col-md-5">
                            <input id="contrasenia" name="contrasenia" type="password" placeholder="Contraseña"
                                class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="confirmarContraseña">Confirmar Contraseña: </label>
                        <div class="col-md-5">
                            <input id="confirmarContrasenia" name="confirmarContraseña" type="password"
                                placeholder="Confirmar Contraseña" class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="email">Correo Electronico: </label>
                        <div class="col-md-5">
                            <input id="email" name="email" type="email" placeholder="Correo Electronico"
                                class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                      <label class="col-md-1 control-label" for="rol">Rol de Usuario: </label>
                      <div class="col-md-5">
                          <select name="rol" id="rol">
                            <option value=""></option>
                              <option value="1">1. Administrador</option>
                              <option value="2">2. Seguridad</option>
                              <option value="3">3. Mantenimiento</option>
                              <option value="4">4. Consulta</option>
                          </select>
                      </div>
                  </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="preguntaSeguridad">Pregunta de Seguridad: </label>
                        <div class="col-md-5">
                            <select name="preguntaSeguridad" id="preguntaSeguridad">
                                <option value="1">Nombre de Primera Mascota</option>
                                <option value="2">Equipo de Basketball favorito</option>
                                <option value="3">Nombre de tu abuelo/a</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="emial">Respuesta de Seguridad: </label>
                        <div class="col-md-5">
                            <input id="respuestaSeguridad" name="respuestaSeguridad" type="text"
                                placeholder="Respuesta de Seguridad" class="form-control input-md">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-1 control-label" for="estado">Estado del Usuario: </label>
                        <div class="col-md-5">
                            <select name="estado" id="estado">
                              <option value=""></option>
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 control-label" for="btnRedondo"></label>
                        <div class="col-md-8">
                            <button id="btnRedondoCrearUsuario" type="button" class="btn btn-primary">
                                Crear Usuario</button>
                        </div>
                    </div>
                </fieldset>
            </form>
